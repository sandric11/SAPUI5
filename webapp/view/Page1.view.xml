<mvc:View
	controllerName="sapphir.createreservation.controller.Page1"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
	xmlns:core="sap.ui.core"
>
	<Shell id="shell">
		<App id="app" mobileWebAppCapable="true">
			<pages>
				<Page
					id="page1"
					title="{i18n>title}"				
				>
					<content>
						<form:Form
							width="100%"
							editable="true"
							visible="true"
						>
							<form:title>
								<core:Title
									text="{i18n>VnesiProstor}"
									level="Auto"
									icon="sap-icon://factory"
								/>
							</form:title>
							<form:formContainers>
								<form:FormContainer visible="true">
									<form:formElements>
										<form:FormElement visible="true">
											<form:label>
												<Label
													text="{i18n>formLabelProstor}"
													design="Standard"
													width="100%"
													required="true"
													textAlign="Begin"
													textDirection="Inherit"
													visible="true"
												/>
											</form:label>
											<form:fields>
												<Input
													id="inputProstor"
													liveChange="isProstorEntered"
													placeholder="Poskeniraj QR"
													type="Text"
													description=""
													showValueHelp="false"
													enabled="true"
													visible="true"
													width="auto"
													valueHelpOnly="false"
													required="true"
													valueStateText="Napaka v formatu"
													maxLength="9"
													submit="onSubmit"
												/>
												<Button
													text="{i18n>Scan}"
													type="Default"
													icon="sap-icon://bar-code"
													iconFirst="true"
													width="auto"
													enabled="true"
													visible="true"
													iconDensityAware="false"
													press="onSkeniraj"
												/>
											</form:fields>
										</form:FormElement>
									</form:formElements>
									<form:title/>
								</form:FormContainer>
							</form:formContainers>
							<form:layout>
								<form:ResponsiveGridLayout
									adjustLabelSpan="false"
									columnsL="2"
									labelSpanL="3"
									columnsM="1"
									labelSpanM="2"
									labelSpanS="12"
								/>
							</form:layout>
						</form:Form>
					</content>
					<footer>
						<OverflowToolbar
							width="100%"
							height="46px"
							design="Auto"
							enabled="true"
							visible="true"
						>
							<content>
								<ToolbarSpacer width=""/>
								<Button
									text="Potrdi"
									id="buttonPotrdi"
									type="Emphasized"
									icon="sap-icon://arrow-right"
									iconFirst="true"
									width="auto"
									enabled="true"
									visible="true"
									iconDensityAware="false"
									press="onSubmit"
								/>
							</content>
						</OverflowToolbar>
					</footer>
					<headerContent/>
					<subHeader/>
					<customHeader/>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>