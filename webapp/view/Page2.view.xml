<mvc:View
	controllerName="sapphir.createreservation.controller.Page2"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:form="sap.ui.layout.form"
>
	<App id="app">
		<pages>
			<Page
				title="{i18n>title}"
				showNavButton="true"
				navButtonPress="onBack"
				id="page2"
			>
				<content>
					<form:Form
						width="100%"
						editable="true"

					>
						<form:title/>
						<form:formContainers>
							<form:FormContainer visible="true">
								<form:formElements>
									<form:FormElement visible="true">
										<form:label>
											<Label
												text="{i18n>Page2View.Material}"
												design="Standard"
												width="100%"
												required="true"
												textAlign="Begin"
												textDirection="Inherit"
												visible="true"
											/>
										</form:label>
										<form:fields>
											<Input
												id="inputMaterial"
												value=""
												placeholder="Poskeniraj QR"
												type="Number"
												showValueHelp="true"
												valueHelpIconSrc="sap-icon://accept"
												valueHelpRequest="getMaterialData"
												enabled="true"
												visible="true"
												width="auto"
												required="true"
												maxLength="7"
												showTableSuggestionValueHelp="false"
												enableSuggestionsHighlighting="false"
												filterSuggests="false"
												showValueStateMessage="false"
												liveChange="isMaterialEntered"
											/>
											<Text
												id="textMaterial"
												text="{jModelMaterialData>/Maktg}"
												width="auto"
												maxLines="1"
												wrapping="true"
												textAlign="Begin"
												textDirection="Inherit"
												visible="true"
											/>
											<Button
												text="{i18n>Scan}"
												type="Default"
												icon="sap-icon://bar-code"
												iconFirst="true"
												width="auto"
												enabled="true"
												visible="true"
												iconDensityAware="false"
												press="onSkeniraj"
											/>
										</form:fields>
									</form:FormElement>
									<form:FormElement visible="true">
										<form:label>
											<Label
												text="{i18n>Page2View.Kolicina}"
												design="Standard"
												width="100%"
												required="true"
												textAlign="Begin"
												textDirection="Inherit"
												visible="true"
											/>
										</form:label>
										<form:fields>
											<Input
												value="{jModelMaterialData>/Quantity}"
												placeholder="Vnesi koliÄino"
												type="Number"
												description="{jModelMaterialData>/Unit}"
												showValueHelp="false"
												enabled="true"
												visible="true"
												width="auto"
												valueHelpOnly="false"
												required="false"
												valueStateText="Invalid entry"
												maxLength="0"
												id="inputKolicina"
											/>
											<Button
												text="{i18n>Page2View.DodajPostavko}"
												id="buttonAddItem"
												press="addItem"
												type="Emphasized"
												icon="sap-icon://add"
												iconFirst="true"
												width="auto"
												enabled="true"
												visible="true"
												iconDensityAware="false"
											/>
										</form:fields>
									</form:FormElement>
								</form:formElements>
								<form:title/>
							</form:FormContainer>
						</form:formContainers>
						<form:layout>
							<form:ResponsiveGridLayout
								adjustLabelSpan="false"
								columnsL="2"
								labelSpanL="3"
								columnsM="1"
								labelSpanM="2"
								labelSpanS="12"
							/>
						</form:layout>
					</form:Form>
					<IconTabBar
						expandable="false"
						expanded="true"
						applyContentPadding="false"
						backgroundDesign="Solid"
						upperCase="false"
						visible="true"
						selectedKey="Ok"
					>
						<items>
							<IconTabFilter
								id="filterPostavke"
								showAll="true"
								icon="sap-icon://list"
								iconColor="Positive"
								text="Postavke"
								count="{/numberOfPostavke}"
								design="Horizontal"
								textDirection="Inherit"
								enabled="true"
								visible="true"
								iconDensityAware="false"
							/>
						</items>
						<content>
							<List
								id="postavkeList"
								mode="Delete"
								width="100%"
								headerText=""
								footerText=""
								backgroundDesign="Solid"
								showSeparators="All"
								growing="true"
								growingThreshold="20"
								growingScrollToLoad="true"
								visible="true"
								class="sapUiResponsiveContentPadding"
								delete="deleteItem"
								items="{/postavke}"
							>
								<ObjectListItem
									intro="{Matnr}"
									title="{Maktg}"
									number="{Quantity}"
									numberUnit="{Unit}"
									numberState="Success"
									type="Active"
									selected="false"
								/>
							</List>
						</content>
					</IconTabBar>
				</content>
				<footer>
					<OverflowToolbar
						width="100%"
						height="46px"
						design="Auto"
						enabled="true"
						visible="true"
					>
						<content>
							<ToolbarSpacer width=""/>
							<Button
								text="{i18n>Page2View.KreirajRezervacijo}"
								type="Emphasized"
								icon="sap-icon://process"
								iconFirst="true"
								width="auto"
								enabled="true"
								visible="true"
								iconDensityAware="false"
								press="kreirajRezervacijo"
							/>
						</content>
					</OverflowToolbar>
				</footer>
				<headerContent/>
				<subHeader/>
				<customHeader/>
			</Page>
		</pages>
	</App>
</mvc:View>